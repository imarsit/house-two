doctype html
html
	head
		- let layout = { header: true, footer: true }
		meta(name='keywords', content=keywords || site.keywords)
		meta(name='description', content=description || site.description)

		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description')
		meta(name='author')

		link(rel='stylesheet', href='/public/stylesheets/style.css')
		link(rel='shortcut icon', href='/public/images/favicon.ico')

		if site
			!= site.code.header

	body


		block content

		if layout.footer
			include lib/footer
	script(src='/public/javascripts/jquery.js')
	script(src='/public/javascripts/jquery.easing.1.3.js')
	script(src='/public/javascripts/bootstrap.min.js')
	script(src='/public/javascripts/jquery.fancybox.pack.js')
	script(src='/public/javascripts/jquery.fancybox-media.js')
	script(src='/public/javascripts/jquery.flexslider.js')
	script(src='/public/javascripts/animate.js')
	script(src='/public/javascripts/modernizr.custom.js')
	script(src='/public/javascripts/jquery.isotope.min.js')
	script(src='/public/javascripts/jquery.magnific-popup.min.js')
	script(src='/public/javascripts/animate.js')
	script(src='/public/javascripts/custom.js')
	script(src='/public/javascripts/owl-carousel/owl.carousel.js')


	block script

	if site
		!= site.code.footer